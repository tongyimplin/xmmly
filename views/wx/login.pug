extends ../layout
block content
    header(class="aui-bar aui-bar-nav") 登录
    div(class='aui-content aui-margin-t-15')
        form(method="post", action="login")
            ul(class='aui-list aui-form-list')
                li(class='aui-list-item')
                    div(class='aui-list-item-inner')
                        div(class='aui-list-item-label') 手机号
                        div(class='aui-list-item-input')
                            input(type='text', placeholder='请输入手机号', name="mobile", value=mobile)

                li(class='aui-list-item')
                    div(class='aui-list-item-inner')
                        div(class='aui-list-item-label') 密码
                        div(class='aui-list-item-input')
                            input(type='password', placeholder='请输入密码', name="password", value=password)
                li(class='aui-list-item')
                    div(class='aui-list-item-inner aui-list-item-center aui-list-item-btn')
                        button(class='aui-btn aui-btn-info aui-margin-r-5') 提交
                        div(class='aui-margin-l-5')
                            a(href='/wx/register' class='aui-text-info') 前往注册
        p(class="aui-text-padded aui-text-danger aui-text-center")=message
